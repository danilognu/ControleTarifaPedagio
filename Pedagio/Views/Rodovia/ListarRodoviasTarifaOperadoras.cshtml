using PagedList.Mvc;

@section scripts {
    <script src="~/js/rodovia/rodoviaTarifa.js" type="text/javascript"></script>
}

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE TITLE-->
        <h3 class="page-title">
            Rodovias Tarifas
        </h3>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->


        <div class="row">
            <div class="col-md-10">
                <form asp-controller="Comparacao" asp-action="CreditosFiltroLista">
                    <div class="form-body">
                        <div class="form-group">


                            <div class="col-md-3">
                                RODOVIA

                                <select class="form-control">
                                    <option value="1">Selecione</option>
                                    <option value="0">AUTOBAN</option>
                                    <option value="0">RODOANEL</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <br />
                                <button type="submit" class="btn blue">
                                    <i class="fa fa-check"></i> Pesquisar
                                </button>
                            </div>

                            <div class="col-md-3">
                                <br />
                                <a type="button" href="/Rodovia/GerarStringComparacao" id="buttonGerarChaveConsulta" class="btn red">
                                    <i class="fa fa-check"></i> Gerar String Comparação
                                </a>
                            </div>

                            <div class="row">
                                <div class="col-md-5 messagem-aviso" style="display:none;">
                                    <br />                                    
                                    @ViewBag.Messagem
                                    <img src='~/images/loader.gif' />
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>




        <div class="row">
            <div class="col-md-12">



                <!-- BEGIN EXAMPLE TABLE PORTLET  INICIO CONTEUDO TABELA-->
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group pull-right">
                                    <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                        Exportar
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu pull-right">
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-file-pdf-o"></i> PDF
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-file-excel-o"></i> Excel
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                        <thead>
                            <tr>
                                <th>
                                    AssociateCompKnownName
                                </th>
                                <th>
                                    RoadCode
                                </th>
                                <th>
                                    RoadEntryKm
                                </th>
                                <th>
                                    Descricao
                                </th>
                                <th>
                                    CategoryArtespId
                                </th>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Tarifa
                                </th>


                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">

                                    <td>
                                        @item.AssociateCompKnownName
                                    </td>
                                    <td>
                                        @item.RoadCode
                                    </td>
                                    <td>
                                        @item.RoadEntryKm
                                    </td>
                                    <td>
                                        @item.Descricao
                                    </td>
                                    <td>
                                        @item.CategoryArtespId
                                    </td>
                                    <td>
                                        @item.Nome
                                    </td>
                                    <td>
                                        @item.Tarifa
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->

            <br />
            <!--Page (Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of Model.PageCount-->



        </div>
    </div>

</div>
<!-- END CONTENT BODY -->
        </div>
<!-- END CONTENT -->
