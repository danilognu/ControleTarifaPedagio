using PagedList.Mvc;

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->

        <!-- BEGIN PAGE TITLE-->
        <h3 class="page-title">
            Rodovias 
        </h3>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->


        <div class="row">
            <div class="col-md-12">

                <a href="/Rodovia/SalvarRodovia" class="btn blue">
                    Cadastrar
                    <i class="fa fa-plus"></i>
                </a>


                <!-- BEGIN EXAMPLE TABLE PORTLET  INICIO CONTEUDO TABELA-->
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group pull-right">
                                    <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                        Exportar
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu pull-right">
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-file-pdf-o"></i> PDF
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-file-excel-o"></i> Excel
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                        <thead>
                            <tr>

                                <th>
                                    Id
                                </th>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    DataCad
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr class="odd gradeX">

                                <td>
                                    @item.RodoviaId
                                </td>
                                <td>
                                    @item.NomeRodovia
                                </td>
                                <td>
                                    @item.DataCad
                                </td>
                                <td>
                                    <a href="/Rodovia/SalvarPessoa?id=@item.RodoviaId" class="btn blue">
                                        Editar
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>

                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->

            <br />

        </div>
    </div>

</div>
<!-- END CONTENT BODY -->
        </div>
<!-- END CONTENT -->
