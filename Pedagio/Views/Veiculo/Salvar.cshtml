@model Pedagio.ViewsModels.VeiculoViewsModels;

@section scripts {
    <script src="~/js/veiculo/veiculo.js" type="text/javascript"></script>
}


<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE TITLE-->
        <h3 class="page-title">
            Adicionar  Veiculo
        </h3>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->


        <div class="row">
            <div class="col-md-7">

                @if( @ViewBag.Aviso != null)
                {
                <div class="alert alert-info">
                    <strong> @ViewBag.Aviso</strong>
                </div>
                }

                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light bordered">

                    <div class="portlet-body form">
                        <form class="form-horizontal" role="form" asp-action="Salvar" asp-controller="Veiculo" asp-anti-forgary method="POST">
                            <div class="form-body">

                                <input type="hidden" class="form-control" asp-for="VeiculoId">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Placa *</label>
                                    <div class="col-md-5">
                                        <input type="text" asp-for="Placa" maxlength=7 class="form-control">
                                        <span asp-validation-for="Placa" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Nome Modelo *</label>
                                    <div class="col-md-9">
                                        <input type="text" asp-for="NomeModelo" id="nome-fantasia" class="form-control">
                                        <span asp-validation-for="NomeModelo" class="text-danger"></span>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label class="col-md-3 control-label">Tipo Veiculo </label>
                                    <div class="col-md-5">
                                        <select class="form-control" asp-for="TipoVeiculoId">

                                            @if (@Model.TipoVeiculoId == 0)
                                            {
                                                <option value="0" selected>Selecione</option>
                                            }

                                            @foreach (var item in @ViewBag.TipoVeiculo)
                                            {

                                                @if (@item.TipoVeiculoId == @Model.TipoVeiculoId)
                                                {

                                                    <option value="@item.TipoVeiculoId" selected>
                                                        @item.Nome
                                                    </option>

                                                }
                                                else
                                                {

                                                    <option value="@item.TipoVeiculoId">
                                                        @item.Nome
                                                    </option>
                                                }

                                            }


                                        </select>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Operação </label>
                                    <div class="col-md-5">
                                        <select class="form-control" asp-for="OperacaoVeiculoId">

                                            @if (@Model.OperacaoVeiculoId == 0)
                                            {
                                                <option value="0" selected>Selecione</option>
                                            }

                                            @foreach (var item in @ViewBag.OperacaoVeiculo)
                                            {

                                                @if (@item.OperacaoVeiculoId == @Model.OperacaoVeiculoId)
                                                {

                                                    <option value="@item.OperacaoVeiculoId" selected>
                                                        @item.Nome
                                                    </option>
                                                }
                                                else
                                                {

                                                    <option value="@item.OperacaoVeiculoId">
                                                        @item.Nome
                                                    </option>

                                                }
                                            }

                                        </select>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Eixo Suspenso </label>
                                    <div class="col-md-5">
                                        <select class="form-control" asp-for="CategoriaIdEixoSuspenso">

                                            @if (@Model.CategoriaIdEixoSuspenso == 0)
                                            {
                                                <option value="0" selected>Selecione</option>
                                            }

                                            @foreach (var item in @ViewBag.CategoriaEixoSuspenso)
                                            {

                                                @if (@item.CategoriaId == @Model.CategoriaIdEixoSuspenso)
                                                {

                                                    <option value="@item.CategoriaId" selected>
                                                        @item.Numero / @item.Descricao
                                                    </option>
                                                }
                                                else
                                                {

                                                    <option value="@item.CategoriaId">
                                                        @item.Numero / @item.Descricao
                                                    </option>

                                                }
                                            }

                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Eixo Abaixo</label>
                                    <div class="col-md-5">
                                        <select class="form-control" asp-for="CategoriaIdEixoAbaixado">

                                            @if (@Model.CategoriaIdEixoAbaixado == 0)
                                            {
                                                <option value="0" selected>Selecione</option>
                                            }

                                            @foreach (var item in @ViewBag.CategoriaEixoAbaixado)
                                            {

                                                @if (@item.CategoriaId == @Model.CategoriaIdEixoAbaixado)
                                                {

                                                    <option value="@item.CategoriaId" selected>
                                                        @item.Numero / @item.Descricao
                                                    </option>
                                                }
                                                else
                                                {

                                                    <option value="@item.CategoriaId">
                                                        @item.Numero / @item.Descricao
                                                    </option>

                                                }
                                            }

                                        </select>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Status</label>
                                    <div class="col-md-5">
                                        <select class="form-control" asp-for="Status">
                                            <option value="1">Ativo</option>
                                            <option value="0">Desativo</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn blue" id="btn-gravar-dados">Adicionar</button>
                                            <button type="button" id="btn-cancelar-form" class="btn default cancelar-veiculo">Cancelar</button>
                                        </div>
                                    </div>
                                </div>
</form>
                    </div>
                </div>
                <!-- END SAMPLE FORM PORTLET-->

                <br />
                <!--Page (Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of Model.PageCount-->



            </div>
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>
<!-- END CONTENT -->
