@model Pedagio.ViewsModels.OperacaoVeiculoViewsModels;

@section scripts {
    <script src="~/js/veiculo/veiculo.js" type="text/javascript"></script>
}


<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE TITLE-->
        <h3 class="page-title">
            Operação Veiculos
        </h3>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->


        <div class="row">
            <div class="col-md-7">

                @if( @ViewBag.Aviso != null)
                {
                <div class="alert alert-info">
                    <strong> @ViewBag.Aviso</strong>
                </div>
                }

                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light bordered">

                    <div class="portlet-body form">
                        <form class="form-horizontal" role="form" asp-action="SalvarOperacaoVeiculo" asp-controller="Veiculo" asp-anti-forgary method="POST">
                            <div class="form-body">

                                <input type="hidden" class="form-control" asp-for="OperacaoVeiculoId">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Nome *</label>
                                    <div class="col-md-5">
                                        <input type="text" asp-for="Nome" maxlength=100 class="form-control">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Status</label>
                                    <div class="col-md-5">
                                        <select class="form-control" asp-for="Status">
                                            <option value="1" >Ativo</option>
                                            <option value="0">Desativo</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn blue" id="btn-gravar-dados">Adicionar</button>
                                            <button type="button" id="btn-cancelar-form" class="btn default cancelar-operacao-veiculo">Cancelar</button>
                                        </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
                <!-- END SAMPLE FORM PORTLET-->

                <br />
                <!--Page (Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of Model.PageCount-->



            </div>
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>
<!-- END CONTENT -->
