
@section scripts {

    <script src="~/js/veiculo/veiculo.js" type="text/javascript"></script>

}


<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE TITLE-->
        <h3 class="page-title">
            Veiculos
        </h3>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->

        <div class="row">
            <div class="col-md-7">
                <form asp-controller="Comparacao" asp-action="CreditosLista">
                    <div class="form-body">
                        <div class="form-group">

                            <label class="control-label col-md-2"></label>
                            <div class="col-md-3">
                                <input class="form-control" name="Placa" id="Placa" type="text" />
                            </div>

                            <button type="button" id="teste" class="btn blue">
                                <i class="fa fa-check"></i> Pesquisar
                            </button>

                        </div>
                    </div>
                </form>
            </div>
        </div>


        <a href="/Veiculo/Salvar" class="btn blue">
            Cadastrar Veiculo
            <i class="fa fa-plus"></i>
        </a>


        <div class="row">
            <div class="col-md-12">



                <!-- BEGIN EXAMPLE TABLE PORTLET  INICIO CONTEUDO TABELA-->
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">

                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                        <thead>
                            <tr>
                                <th> Placa </th>
                                <th> Modelo </th>
                                <th> Tipo Veiculo </th>
                                <th> Operação </th>
                                <th> Status </th>
                                <th> Editar </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr class="odd gradeX">

                                <td>@item.Placa</td>
                                <td>@item.NomeModelo</td>
                                <td>@item.TipoVeiculoNome</td>
                                <td>@item.OperacaoVeiculoNome</td>
                                <td>
                                    @if(@item.Status == 0){
                                    <a class="btn btn-icon-only red" title="Desativado">
                                        <i class="fa fa-close"></i>
                                    </a>
                                    }else{
                                    <a class="btn btn-icon-only green" title="Ativado">
                                        <i class="fa fa-check"></i>
                                    </a>
                                    }
                                </td>
                                <td>

                                    <a href="/Veiculo/Salvar?id=@item.VeiculoId" class="btn blue">
                                        Editar
                                        <i class="fa fa-file-o"></i>
                                    </a>

                                </td>

                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->

            <br />
            <!--Page (Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of Model.PageCount-->



        </div>
    </div>

</div>
<!-- END CONTENT BODY -->
        </div>
<!-- END CONTENT -->
